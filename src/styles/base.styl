*
  box-sizing border-box

html, body
  margin 0
  padding 0
  width 100%
  height 100%

body
  font-family font
  font-size arem
  line-height 1.5em
  transition background-color 0.3s ease

#main
  width 100%
  height 100%

p
  margin-top 0.5*arem

h1, h2, h3
  font-weight 300
  display block

h1
  font-size 1.75 * arem

h2
  font-size 1.5 * arem

h3
  font-size 1.4 * arem

kbd
  background darken(white, 10%)
  border 1px solid darken(white, 20%)
  font-family 'Courier New', monospace
  border-radius 5px
  padding 0 7px
